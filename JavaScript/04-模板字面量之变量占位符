// 模板字面量之变量占位符

// 1、字符串拼接
var name = '张三';
var str6 = '欢迎' + name + '同学，学习Vue';
console.log(str6);

// 2、使用反引号和${}来界定
var name1 = '张三';
var str7 = `欢迎${name1}同学，学习Vue`;
console.log(str7)

let price = 10;
let amount = 3;
let str8 = `商品单价:${price}元，数量:${amount},小计:${(price * amount).toFixed(2)}`;
console.log(str8)
